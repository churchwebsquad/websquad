-- Add this code to site header injection --
<!-- Secondary Nav -->
<div data-wm-plugin="subnav"
     data-nav-setup="simple"
     data-position="bottom"
     mobile-position="bottom"
     data-sticky="false">
</div>
<script>
  (function() {
    window.addEventListener('secondaryNavLoaded', showPage);
    window.addEventListener('load', function(){
      setTimeout(function(){showPage()}, 300)
    });

    function showPage() {
      document.body.classList.add('wm-secondary-nav-css-loaded');
    }
  }());
</script>
<style>
  body{
    opacity:0;
    transition: opacity .3s ease;
  }
  body.wm-secondary-nav-css-loaded{
    opacity:1;
  }
</style>

-- Add this code to custom css --
/*Secondary Nav*/
 #wm-subnav, .wm-secondary-mobile-nav{
    display:none;
  }
#wm-subnav .wm-secondary-sticky-wrapper{
 background-color: #EF5B2C;
}
.header-nav-item.wm-subnav-item:nth-of-type(4) {
  padding:.3em .7em;
  background:#191919;
  border-bottom: 4px solid #BC4F9C;
  transition: 450ms;
  text-transform: uppercase;
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 1px;
}
.header-nav-item.wm-subnav-item:hover {
  opacity: .8;
}

-- Add this code to the head of each page you want the nav to appear --
<style>
#wm-subnav, .wm-secondary-mobile-nav{
    display:block;
  }
  </style>
