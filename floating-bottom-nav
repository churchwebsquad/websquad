<!-- Sticky Bottom Nav -->
<script>
document.addEventListener("DOMContentLoaded", function() {
    let lastScrollTop = 0;

    window.addEventListener("scroll", function() {
        let st = window.pageYOffset || document.documentElement.scrollTop;
        let isMobile = window.innerWidth <= 600; // Check if on mobile

        if (st > lastScrollTop) {
            // Scrolling down
            document.getElementById('floating-nav-wrapper').style.animation = 'slide-up 1s ease';
        } else {
            if (!isMobile) {
                // Scrolling up, only on non-mobile screens
                document.getElementById('floating-nav-wrapper').style.animation = 'slide-down 0.5s ease forwards';
            }
        }
        lastScrollTop = st <= 0 ? 0 : st; // For negative values
    }, false);
});
</script>
