/* Animations */
@keyframes slide-up {
  0% {
    transform: translateY(100px);
  }
  100% {
    transform: translateY(0);
  }
}


@keyframes slide-down {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(150px);
    visibility: hidden;  
  }
}

/* Side by Side Buttons */
