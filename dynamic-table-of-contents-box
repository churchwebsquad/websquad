>>> This box will change based on the div id's passed as the user scrolls down the page. Replace placeholders accordingly.

/*Use a Custom Code Block*/
<div class="class-a">
  <h4>Placeholder Title:</h4>
  <a href="#id-a" style="text-decoration">Placeholder Link 1</a>
  <a href="#id-b">Placeholder Link 2</a>
  <a href="#id-c">Placeholder Link 3</a>
  <a href="#id-d">Placeholder Link 4</a>
</div>

/*Dyanmic Table of Contents*/
.class-a h4, .class-a a {
  font-size: 17px;
  line-height: 30px;
  display: block !important;
  transition: 1s;
  padding-left: 15px;
  margin: 10px;
}

.class-a a:hover {
  opacity: 50%;
}

.class-a a {
    transition: color .1s, border-left 0.1s, font-weight 0.1s;
}

.class-a a.active {
    color: #62C9F2;
    font-weight: bold;
    border-left: 3px solid #62C9F2;
}

<!-- Table of Contents Box -->
<script>
document.addEventListener("DOMContentLoaded", function() {
    const navLinks = document.querySelectorAll('.class-a a');
    const sections = Array.from(navLinks).map(link => document.querySelector(link.getAttribute('href')));

    function getActiveSectionIndex() {
        const offsetThreshold = 200;

        for (let i = 0; i < sections.length; i++) {
            const sectionTop = sections[i].getBoundingClientRect().top;

            if (sectionTop > offsetThreshold) {
                return i - 1;
            }
        }

        return sections.length - 1;
    }

    function updateActiveLink() {
        const index = getActiveSectionIndex();

        navLinks.forEach((link, i) => {
            if (i === index) {
                link.classList.add('active');
            } else {
                link.classList.remove('active');
            }
        });
    }

    navLinks.forEach((link, idx) => {
        link.addEventListener('click', (e) => {
            e.preventDefault();

            const target = sections[idx];
            target.scrollIntoView({
                behavior: 'smooth'
            });

            history.replaceState(null, null, link.getAttribute('href'));
        });
    });

    window.addEventListener('scroll', updateActiveLink);
    updateActiveLink(); 
});

</script>
